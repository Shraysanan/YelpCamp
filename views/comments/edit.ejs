<%-include('../partials/header') %>
<div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-6 col-sm-10" id="infobox">
        <h1 style="text-align: center">Edit Your Comment</h1>
        <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>" required>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">SUBMIT</button>
          </div>
        </form>
        <a href="/campgrounds/<%= campground_id %>">GO BACK</a>
      </div>  
    </div>
</div>
<%-include('../partials/footer') %>
